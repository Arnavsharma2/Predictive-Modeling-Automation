# Application Settings
APP_NAME="AI-Powered Analytics Platform"
APP_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT=local  # local, staging, production

# API Configuration
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001"]

# Security
SECRET_KEY=your-secret-key-here-change-in-production-use-openssl-rand-hex-32
API_KEY_HEADER=X-API-Key

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/analytics_db
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://redis:6379/0
REDIS_CACHE_TTL=3600

# Cloud Storage - AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=

# Cloud Storage - Azure Blob
AZURE_STORAGE_ACCOUNT_NAME=
AZURE_STORAGE_ACCOUNT_KEY=
AZURE_STORAGE_CONTAINER_NAME=

# Cloud Storage - Local
LOCAL_STORAGE_PATH=/app/storage

# Cloud Storage Provider (s3, azure, or local)
CLOUD_STORAGE_PROVIDER=local

# Prefect (Workflow Orchestration)
PREFECT_API_URL=http://prefect:4200/api

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json  # json or text

# Monitoring and Observability
SENTRY_DSN=  # Optional: Set for error tracking in production
ENABLE_METRICS=true
ENABLE_TRACING=true
